<div class="ui segment">
  <%= form_for(@user, method: :post, html: { class: "ui form" }) do |f| %>
    <h4 class="ui dividing header">Personal Information</h4>
    <div class="required field">
      <label>Name</label>
      <%= f.text_field :name %>
    </div>
    <div class="required field">
      <label>Email</label>
      <%= f.text_field :email %>
    </div>
    <div class="required field">
      <label>Phone Number</label>
      <%= f.text_field :phoneNumber %>
    </div>
    <div class="required field">
      <label>Facebook URL</label>
      <%= f.text_field :facebookUrl %>
    </div>
    <h4 class="ui dividing header">Login Information</h4>
    <div class="required field">
      <label>Username</label>
      <%= f.text_field :username %>
    </div>
    <div class="required field">
      <label>Password</label>
      <%= f.password_field :password %>
    </div>
    <input type="submit" class="ui submit button" value="Add User" />
  <% end %>
</div>